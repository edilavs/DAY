
@model TeamMember
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>
<div class="container">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">FullName</label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Position</label>
                    <input asp-for="Position" class="form-control">
                    <span asp-validation-for="Position"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Desc" class="form-label">Desc</label>
                    <input asp-for="Desc" class="form-control">
                    <span asp-validation-for="Desc"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>


